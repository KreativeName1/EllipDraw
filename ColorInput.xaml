<Window x:Class="EllipDraw.ColorInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:EllipDraw"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ColorInput" Height="350" Width="250" Icon="/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="280"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <xctk:ColorCanvas x:Name="CC_Color" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Button x:Name="BTN_OK"  Grid.Row="1" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" />
        <Button x:Name="BTN_Cancel" Grid.Row="1" Grid.Column="1" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" />
    </Grid>
</Window>
