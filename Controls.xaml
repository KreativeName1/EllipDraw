<Window x:Class="EllipDraw.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EllipDraw"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Controls" Height="450" Width="250" Icon="/icon.ico">
    <Grid>
        <StackPanel>
            <Label Content="Move - WASD" />
            <Label Content="Change Width - J/L" />
            <Label Content="Change Height - K/I" />
            <Label Content="Delete - Backspace | Delete" />
            <Label Content="Clone - Enter" />
            <Label Content="Opacity - Z/H" />
            <Label Content="Rotate - Q/E" />
            <Label Content="Scale - U/O" />
            <Label Content="Edit - R" />
            <Label Content="Add Random - T" />
            <Label Content="Add Custom - G" />
            <Label Content="Precision - F" />
            <Label Content="Copy - C" />
            <Label Content="Paste - V" />
            <Label Content="Cut - X" />
            <Button Content="Close" Click="Button_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
